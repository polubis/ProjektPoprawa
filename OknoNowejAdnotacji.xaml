<Window x:Class="Projekt_Poprawa.OknoNowejAdnotacji"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoNowejAdnotacji" Height="300" Width="520" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <WrapPanel>
            <Label Height="43" Width="268" Margin="20,0,0,0" Content="   Wpisz poniżej wiadomość dla pracowników" FontWeight="Bold"/>
            <TextBox Width="348" Height="148" Margin="23,0,0,0" x:Name="pobierzAdnotacje"></TextBox>
            <Button Height="37" Width="95" Margin="50,10,0,0" Click="Potwierdz" FontWeight="Bold">Potwierdź</Button>
            <Button Height="37" Width="95" Margin="5,10,0,0" Click="Cofnij" FontWeight="Bold">Anuluj</Button>
            <Button Height="37" Width="113" Margin="5,10,0,0" Click="ZamknijAplikacje" FontWeight="Bold">Zamknij aplikację</Button>
        </WrapPanel>
        <WrapPanel Margin="384,0,0,0">
            <Button Height="37" Width="106" Margin="5,50,0,0" Click="UsunWszystkie" FontWeight="Bold">Usuń wszystkie</Button>
            <Button Height="37" Width="106" Margin="5,50,0,0"  FontWeight="Bold" Click="UsunStarsze" >Usuń starsze</Button>
        </WrapPanel>

    </Grid>
</Window>
